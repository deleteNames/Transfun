<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/list_divider_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <net.translives.app.widget.PortraitView
                        android:id="@+id/iv_avatar"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="top"
                        android:src="@mipmap/widget_default_face" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/lay_4"
                        android:textColor="@color/main_green"
                        android:textSize="12sp"
                        android:maxLines="1"
                        tools:text="最近dddddd" />

                    <TextView
                        android:id="@+id/tv_reply_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_dark"
                        android:textSize="12sp"
                        android:maxLines="1"
                        tools:text="回复" />

                    <TextView
                        android:id="@+id/tv_reply_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_green"
                        android:textSize="12sp"
                        android:maxLines="1"
                        tools:text="最近dddddd" />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/lay_8"
                    android:lineSpacingExtra="@dimen/font_4"
                    android:textColor="@color/text_desc_color"
                    android:textSize="14sp"
                    tools:text="最近研究了这个项目，学习rx系列,修复了楼主的bug 主要原因在mainActivity里面资讯fragment的构建" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/lay_8"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_pub_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:lines="1"
                        android:textColor="#9d9d9d"
                        android:textSize="@dimen/font_12"
                        tools:text="6分钟" />

                </LinearLayout>
            </LinearLayout>

</LinearLayout>
